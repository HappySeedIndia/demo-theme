{#
/**
 * @file
 * Badge component.
 *
 * Available Properties:
 * - title: Badge text.
 * - html_tag: The HTML tag to use for the badge. Defaults to span.
 * - color: Background and Text Color.
 * - url: The HTML tag will automatically be set to a if an anchor is added to the URL.
 * - extraClasses: An array of utility classes that can be used to add extra
 * Bootstrap utility classes or custom classes to this component.
 *
 */
#}
{% set html_tag = html_tag ?? 'span' %}
{% set color = color ? ['text-bg-' ~ color] : ['text-bg-secondary'] %}

{%
  set classes = [
    'badge',
  ]|merge(color)
%}

{% if not attributes %}
  {% set attributes = create_attribute() %}
{% endif %}

{% if url %}
  {% set html_tag = 'a' %}
  {% set url = url|render %}
  {% set attributes = attributes.setAttribute('href', url) %}
{% endif %}


<{{html_tag}}{{ attributes.addClass(classes).addClass(extraClasses|default([])) }}">{% apply spaceless %}
  {{ title }}
{% endapply %}</{{html_tag}}>
